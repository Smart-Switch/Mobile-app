<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#efefef">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
        <FrameLayout
            android:layout_width="350dp"
            android:layout_height="400dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/buttonshape2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kullanıcı Adı:"
                android:id="@+id/kullaniciadi"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-Mail:"
                android:textStyle="bold"
                android:id="@+id/mail"
                android:layout_below="@+id/kullaniciadigiris"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Şifre"
                android:textStyle="bold"
                android:id="@+id/sifre"
                android:layout_below="@+id/kullaniciadigiris"
                android:layout_marginTop="140dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Şifre: (Yeniden Yazın)"
                android:textStyle="bold"
                android:id="@+id/yenisifre"
                android:layout_marginTop="210dp"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="7"
                android:id="@+id/sifregiris"
                android:layout_below="@id/sifre"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="150dp"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="7"
                android:id="@+id/yenidensifregiris"
                android:layout_below="@id/yenisifre"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="225dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/mailgiris"
                android:layout_below="@id/mail"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="85dp"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="7"
                android:id="@+id/kullaniciadigiris"
                android:layout_below="@id/kullaniciadi"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="30dp"/>

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Kaydı Tamamla"
                android:background="@drawable/buttonshape"
                android:id="@+id/kayittamamla"
                android:layout_marginTop="320dp"
                android:layout_marginLeft="65dp"
                />
         </FrameLayout>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>